<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/customDialog"
        android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            android:id="@+id/changeDataCard">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/textInputLayoutCN"
                    android:layout_marginStart="24dp"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:hintTextAppearance="@style/customTextLayout"
                    android:textColorHint="@color/colorRipple"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent">

                <com.pauenrech.ejerciciocontentprovider.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        style="@style/customEditText"
                        android:theme="@style/customEditText"
                        android:id="@+id/changeNombre"
                        android:layout_weight="1"
                        android:hint="Producto"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:background="@null"
                        android:paddingTop="18dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/textInputLayoutCC"
                    android:layout_marginStart="24dp"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:hintTextAppearance="@style/customTextLayout"
                    android:textColorHint="@color/colorRipple"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCN">

                <com.pauenrech.ejerciciocontentprovider.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        style="@style/customEditText"
                        android:theme="@style/customEditText"
                        android:id="@+id/changeCantidad"
                        android:layout_weight="1"
                        android:hint="Cantidad"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:paddingTop="18dp"
                        android:background="@null"/>
            </android.support.design.widget.TextInputLayout>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_round_done_36"
                    android:id="@+id/imageButton2"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCC"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:onClick="guardarCambios"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>